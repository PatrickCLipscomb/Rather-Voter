<h1><%= @question.name %> Page</h1>

<ul class="list-group well">
  <% @question.answers.each do |answer| %>
  <li class="list-group-item"><strong><%= answer.name %></strong> <%= link_to "View answer", question_answer_path(@question, answer), :class => "btn btn-info btn-sm pull-right"%></li>
  <% end %>
</ul>

<div class="btn-group">
  <%= link_to "Edit", edit_question_path(@question), :class => "btn btn-primary" %>
  <%= link_to "Delete", question_path(@question), :class => "btn btn-primary", :data => {:confirm => "You Sure?", :method => 'delete'} %>
  <%= link_to "Add a answer", new_question_answer_path(@question), :class => "btn btn-primary" %>
</div>


<hr>

<%= link_to "Back to Homepage", questions_path %>
